{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@qt/client/data-access": ["libs/client/data-access/src/index.ts"],
      "@qt/client/feature-dashboard": [
        "libs/client/feature-dashboard/src/index.ts"
      ],
      "@qt/client/ui-components": ["libs/client/ui-components/src/index.ts"],
      "@qt/server/data-access-quote": [
        "libs/server/data-access-quote/src/index.ts"
      ],
      "@qt/server/feature-health": ["libs/server/feature-health/src/index.ts"],
      "@qt/server/feature-quote": ["libs/server/feature-quote/src/index.ts"],
      "@qt/shared/domain": ["libs/shared/domain/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
